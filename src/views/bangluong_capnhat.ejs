                        <div class="tab-pane fade show active" id="salary" role="tabpanel">
                            <div class="card shadow">
                                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                                    <h6 class="m-0 font-weight-bold text-primary">Cập nhật bảng lương</h6>

                                    <!-- Bọc 2 nút trong một div để căn phải -->
                                    <div>
                                        <button class="btn btn-danger btn-sm" onclick="">Lưu</button>
                                    </div>
                                </div>

                                <div class="card-body">
                                    <form action="/update-crew" method="POST">
                                        <table class="table table-bordered table-hover">
                                            <tbody>
                                                <tr>
                                                    <th scope="row">Họ và tên</th>
                                                    <td><input type="text" class="form-control" name="fullName"
                                                            value="Nguyễn Văn A" required></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">Trạng thái thuyền viên</th>
                                                    <td>
                                                        <select class="form-control" name="crewStatus" required>
                                                            <option value="onboard">Đang trên tàu</option>
                                                            <option value="offboard">Đã xuống tàu</option>
                                                            <option value="waiting">Chờ xuất cảnh</option>
                                                        </select>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">Thời gian lên tàu</th>
                                                    <td><input type="datetime-local" class="form-control"
                                                            name="onboardTime" value="2024-06-15T12:00" required></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">Thời gian xuất cảnh</th>
                                                    <td><input type="datetime-local" class="form-control"
                                                            name="departureTime" value="2024-06-15T23:00"></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">Thời gian xuống tàu</th>
                                                    <td><input type="datetime-local" class="form-control"
                                                            name="offboardTime" value=""></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">Số ngày công</th>
                                                    <td><input type="number" class="form-control" name="workingDays"
                                                            value="30" min="0" required></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">Tháng</th>
                                                    <td><input type="month" class="form-control" name="month"
                                                            value="2025-03" required></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">Phương thức tính lương</th>
                                                    <td>
                                                        <select class="form-control" name="salaryMethod" required>
                                                            <option value="daily">Theo ngày công</option>
                                                            <option value="monthly">Theo tháng</option>
                                                            <option value="hourly">Theo giờ</option>
                                                        </select>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">Lương cơ bản</th>
                                                    <td><input type="text" class="form-control" name="baseSalary"
                                                            value="22,000 USD" required></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">Hệ số quy đổi</th>
                                                    <td><input type="number" step="0.01" class="form-control"
                                                            name="conversionRate" value="1.2" required></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">Số tài khoản</th>
                                                    <td><input type="text" class="form-control" name="accountNumber"
                                                            value="+84 912345678" required></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">Ngân hàng</th>
                                                    <td><input type="text" class="form-control" name="bank"
                                                            value="VietinBank" required></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">Tổng lương</th>
                                                    <td><input type="text" class="form-control" name="totalSalary"
                                                            value="30.000.000 VNĐ" required></td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">Trạng thái bảng lương</th>
                                                    <td>
                                                        <select class="form-control" name="salaryStatus" required>
                                                            <option value="unpaid" selected>Chưa thanh toán</option>
                                                            <option value="paid">Đã thanh toán</option>
                                                            <option value="pending">Đang xử lý</option>
                                                        </select>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">PDF</th>
                                                    <td>
                                                        <input type="file" class="form-control" name="salaryPDF"
                                                            accept=".pdf">
                                                        <small>File hiện tại: bangluong.pdf</small>
                                                    </td>
                                                </tr>

                                            </tbody>
                                        </table>
                                    </form>
                                </div>


