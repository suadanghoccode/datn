                    <h1 class="h3 mb-2 text-gray-800">Thêm thuyền viên</h1>
                    <form action="/crew-add" method="POST" enctype="multipart/form-data">
                        <!-- Thông tin cá nhân -->
                        <div class="card shadow mb-4">
                            <div class="card-header bg-primary text-white">Thông tin cá nhân</div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>Họ và tên:</label>
                                        <input type="text" class="form-control" name="full_name" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label>Ngày sinh:</label>
                                        <input type="date" class="form-control" name="dob" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label>CCCD:</label>
                                        <input type="text" class="form-control" name="cccd" required>
                                    </div>
                                    <div class="col-md-3">
                                        <label>Chiều cao (cm):</label>
                                        <input type="number" class="form-control" name="height" required>
                                    </div>
                                    <div class="col-md-3">
                                        <label>Cân nặng (kg):</label>
                                        <input type="number" class="form-control" name="weight" required>
                                    </div>
                                    <div class="col-md-3">
                                        <label>Nhóm máu:</label>
                                        <select class="form-control" name="blood_type">
                                            <option value="O">O</option>
                                            <option value="A">A</option>
                                            <option value="B">B</option>
                                            <option value="AB">AB</option>
                                        </select>
                                    </div>
                                    <div class="col-md-3">
                                        <label>Size giày:</label>
                                        <input type="number" class="form-control" name="shoe_size" required>
                                    </div>
                                    <div class="col-md-3">
                                        <label>Size giày bảo hộ:</label>
                                        <input type="number" class="form-control" name="safety_shoe_size" required>
                                    </div>
                                    <div class="col-md-3">
                                        <label for="time">Thời gian lên tàu dự kiến:</label>
                                        <input type="date" class="form-control" id="time" name="time" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label>Email:</label>
                                        <input type="email" class="form-control" name="email" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label>Số điện thoại:</label>
                                        <input type="text" class="form-control" name="phone" required>
                                    </div>
                                    <div class="col-md-6">
                                        <label>Tình trạng hôn nhân:</label>
                                        <select class="form-control" name="marital_status">
                                            <option value="Độc thân">Độc thân</option>
                                            <option value="Đã kết hôn">Đã kết hôn</option>
                                        </select>
                                    </div>
                                    
                                    <div class="col-md-6">
                                        <label>Ảnh hồ sơ:</label>
                                        <input type="file" class="form-control-file" name="profile_image"
                                            accept="image/*">
                                    </div>
                                </div>
                            </div>
                        </div>


                        <!-- Thông tin gia đình -->
                        <div class="card shadow mb-4">
                            <div class="card-header bg-primary text-white">Thông tin gia đình</div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>Họ tên bố:</label>
                                        <input type="text" class="form-control" name="father_name">
                                    </div>
                                    <div class="col-md-6">
                                        <label>Số điện thoại bố:</label>
                                        <input type="text" class="form-control" name="father_phone">
                                    </div>
                                    <div class="col-md-6">
                                        <label>Họ tên mẹ:</label>
                                        <input type="text" class="form-control" name="mother_name">
                                    </div>
                                    <div class="col-md-6">
                                        <label>Số điện thoại mẹ:</label>
                                        <input type="text" class="form-control" name="mother_phone">
                                    </div>
                                    <div class="col-md-6">
                                        <label>Họ tên vợ:</label>
                                        <input type="text" class="form-control" name="mother_name">
                                    </div>
                                    <div class="col-md-6">
                                        <label>Số điện thoại vợ:</label>
                                        <input type="text" class="form-control" name="mother_phone">
                                    </div>
                                    <div class="col-md-6">
                                        <label>Họ tên người giám hộ:</label>
                                        <input type="text" class="form-control" name="mother_name">
                                    </div>
                                    <div class="col-md-6">
                                        <label>Số điện thoại người giám hộ:</label>
                                        <input type="text" class="form-control" name="mother_phone">
                                    </div>
                                    <div class="col-md-12">
                                        <label>Địa chỉ bố mẹ:</label>
                                        <input type="text" class="form-control" name="parent_address">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Học vấn -->
                        <div class="card shadow mb-4">
                            <div class="card-header bg-primary text-white">Học vấn</div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6">
                                        <label>Trường đào tạo hàng hải:</label>
                                        <input type="text" class="form-control" name="university" required>
                                    </div>
                                    <div class="col-md-3">
                                        <label>Hệ đào tạo:</label>
                                        <select class="form-control" name="education_level">
                                            <option value="Cao đẳng">Cao đẳng</option>
                                            <option value="Đại học">Đại học</option>
                                        </select>
                                    </div>
                                    <div class="col-md-3">
                                        <label>Năm tốt nghiệp:</label>
                                        <input type="number" class="form-control" name="graduation_year" required>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Chứng chỉ ngoại ngữ -->
                        <div class="card shadow mb-4">
                            <div class="card-header bg-primary text-white">Chứng chỉ ngoại ngữ</div>
                            <div class="card-body">
                                <div id="language-certificates">
                                    <div class="certificate-entry row">
                                        <div class="col-md-3">
                                            <label>Tên chứng chỉ:</label>
                                            <input type="text" class="form-control" name="language_certificate_name[]"
                                                placeholder="VD: IELTS, TOEIC, HSK5" required>
                                        </div>
                                        <div class="col-md-2">
                                            <label>Điểm số:</label>
                                            <input type="number" class="form-control"
                                                name="language_certificate_score[]" placeholder="Nhập điểm" required>
                                        </div>
                                        <div class="col-md-2">
                                            <label>Ngày cấp:</label>
                                            <input type="date" class="form-control"
                                                name="language_certificate_issue_date[]" required>
                                        </div>
                                        <div class="col-md-2">
                                            <label>Ngày hết hạn:</label>
                                            <input type="date" class="form-control"
                                                name="language_certificate_expiry_date[]">
                                        </div>
                                        <div class="col-md-2">
                                            <label>File chứng chỉ (PDF):</label>
                                            <input type="file" class="form-control-file"
                                                name="language_certificate_file[]" accept=".pdf">
                                        </div>
                                        <div class="col-md-1 text-right mt-4">
                                            <button type="button" class="btn btn-danger btn-sm remove-certificate">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="text-right mt-3">
                                    <button type="button" class="btn btn-success btn-sm" id="addLanguageCertificate">
                                        <i class="fas fa-plus"></i> Thêm chứng chỉ mới
                                    </button>
                                </div>
                            </div>
                        </div>


                        <!-- Chứng chỉ thuyền viên -->
                        <div class="card shadow mb-4">
                            <div class="card-header bg-primary text-white">Chứng chỉ thuyền viên</div>
                            <div class="card-body">
                                <div id="crew-certificates">
                                    <div class="certificate-entry row">
                                        <div class="col-md-4">
                                            <label>Tên chứng chỉ:</label>
                                            <input type="text" class="form-control" name="crew_certificate_name[]"
                                                placeholder="VD: Chứng chỉ thuyền trưởng" required>
                                        </div>
                                        <div class="col-md-3">
                                            <label>Số chứng chỉ:</label>
                                            <input type="text" class="form-control" name="crew_certificate_number[]"
                                                placeholder="Nhập số chứng chỉ" required>
                                        </div>
                                        <div class="col-md-2">
                                            <label>Ngày cấp:</label>
                                            <input type="date" class="form-control" name="crew_certificate_issue_date[]"
                                                required>
                                        </div>
                                        <div class="col-md-2">
                                            <label>Ngày hết hạn:</label>
                                            <input type="date" class="form-control"
                                                name="crew_certificate_expiry_date[]">
                                        </div>
                                        <div class="col-md-4 mt-2">
                                            <label>Nơi cấp:</label>
                                            <input type="text" class="form-control" name="crew_certificate_issuer[]"
                                                placeholder="VD: Cục Hàng Hải">
                                        </div>
                                        <div class="col-md-4 mt-2">
                                            <label>Tiêu chuẩn áp dụng:</label>
                                            <input type="text" class="form-control" name="crew_certificate_standard[]"
                                                placeholder="VD: STCW">
                                        </div>
                                        <div class="col-md-3 mt-2">
                                            <label>File chứng chỉ (PDF):</label>
                                            <input type="file" class="form-control-file" name="crew_certificate_file[]"
                                                accept=".pdf">
                                        </div>
                                        <div class="col-md-1 text-right mt-4">
                                            <button type="button" class="btn btn-danger btn-sm remove-certificate">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="text-right mt-3">
                                    <button type="button" class="btn btn-success btn-sm" id="addCrewCertificate">
                                        <i class="fas fa-plus"></i> Thêm chứng chỉ mới
                                    </button>
                                </div>
                            </div>
                        </div>
                        <!-- Tải lên tài liệu đính kèm -->
                        <div class="card shadow mb-4">
                            <div class="card-header bg-primary text-white">Tải lên tài liệu đính kèm</div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-3">
                                        <label>CCCD (Mặt trước):</label>
                                        <input type="file" class="form-control-file" name="cccd_front" accept="image/*"
                                            required>
                                    </div>
                                    <div class="col-md-3">
                                        <label>CCCD (Mặt sau):</label>
                                        <input type="file" class="form-control-file" name="cccd_back" accept="image/*"
                                            required>
                                    </div>
                                    <div class="col-md-3">
                                        <label>Phiếu tiêm vaccine:</label>
                                        <input type="file" class="form-control-file" name="vaccine_certificate"
                                            accept="image/*">
                                    </div>
                                    <div class="col-md-3">
                                        <label>Chứng nhận vàng da:</label>
                                        <input type="file" class="form-control-file" name="yellow_fever_certificate"
                                            accept="image/*">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Nút gửi form -->
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success btn-lg"><i class="fa fa-save"></i> Lưu thông
                                tin</button>
                        </div>
                    </form>

                </div>

            </div>

            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; PITSCO Crew Management System 2025 </span>
                    </div>
                </div>
            </footer>

