    <script>
        $('#suaHopDongModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget); // Nút được click

            var fileName = button.data('file'); // Hoặc đặt data-file="..." trên nút

            // Lấy dữ liệu từ các data-attribute
            var id = button.data('id');
            var ma = button.data('ma');
            var ngayki = button.data('ngayki');
            var ngayhethan = button.data('ngayhethan');

            // Gán dữ liệu vào các input trong modal
            var modal = $(this);
            modal.find('#idHopDong').val(id);
            modal.find('#thuyenvien_id').val(ma);
            modal.find('#ngayKi').val(ngayki);
            modal.find('#ngayHetHan').val(ngayhethan);
            modal.find('input[name="oldHinhanh"]').val(fileName); // dùng fileName ở đây

            if (fileName) {
                modal.find('#fileHienTai').html(`
            <a href="/uploads/${fileName}" target="_blank" class="text-info">
                Đang có file: ${fileName}
            </a>
        `);
            } else {
                modal.find('#fileHienTai').html(`<span class="text-muted">Không có file hiện tại</span>`);
            }
        });

        function xoaChon() {
            // lấy tất cả checkbox đang check
            const checkboxes = document.querySelectorAll('.row-checkbox:checked');
            const ids = Array.from(checkboxes).map(cb => cb.getAttribute('data-id'));

            if (ids.length === 0) {
                alert('Vui lòng chọn ít nhất một chứng chỉ để xóa!');
                return;
            }

            // xác nhận
            if (!confirm('Bạn có chắc muốn xóa các chứng chỉ đã chọn?')) {
                return;
            }

            // gửi danh sách id bằng POST request
            fetch('/delete-hop-dong', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Accept': 'application/json'
                    },
                    body: JSON.stringify({
                        id: ids
                    }) // id là mảng
                })
                .then(res => {
                    if (res.redirected) {
                        window.location.href = res.url;
                    } else {
                        return res.json();
                    }
                })
                .catch(err => {
                    console.error(err);
                    alert('Có lỗi xảy ra khi xóa.');
                });
        }

        document.addEventListener('DOMContentLoaded', function () {
            document.querySelectorAll('.btn-thanh-ly').forEach(button => {
                button.addEventListener('click', function () {
                    const id = this.getAttribute('data-id');
                    if (confirm('Bạn có chắc muốn thanh lý hợp đồng này không?')) {
                        fetch('/thuc-hien-thanh-ly', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                },
                                body: JSON.stringify({
                                    idHopDong: id
                                })
                            })
                            .then(res => res.json())
                            .then(data => {
                                alert(data.message);
                                location.reload(); // Refresh lại trang
                            })
                            .catch(err => {
                                console.error(err);
                                alert('Có lỗi xảy ra!');
                            });
                    }
                });
            });
        });
    </script>


